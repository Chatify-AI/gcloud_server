# ==========================================
# Docker 环境配置文件
# ==========================================
# 复制此文件为 .env 并根据实际情况修改

# ========================================
# 基础配置
# ========================================
NODE_ENV=production
VOLUME_PATH=./data

# ========================================
# 主应用配置
# ========================================
PORT=3000
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-32-chars
JWT_EXPIRES_IN=7d
SESSION_SECRET=your-session-secret-change-this-in-production-32-chars

# ========================================
# 数据库配置
# ========================================
DB_HOST=mysql-service
DB_PORT=3306
DB_NAME=gcloud
DB_USER=gcloud
DB_PASSWORD=gcloud123

# MySQL Root 密码 (仅初始化时使用)
MYSQL_ROOT_PASSWORD=root_password_change_me

# ========================================
# Redis 配置
# ========================================
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_change_me

# ========================================
# Google OAuth 配置 (可选)
# ========================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# ========================================
# Google Cloud 配置
# ========================================
GCLOUD_PROJECT=your-default-gcp-project-id
GCLOUD_CONFIG_DIR=/root/.config/gcloud-manager

# ========================================
# 前端配置
# ========================================
FRONTEND_URL=http://localhost:3000

# ========================================
# FTP 配置 (可选)
# ========================================
FTP_IMAGE=vsftpd:latest
FTP_PASSWORD=ftppass123
FTP_PASV_ADDRESS=localhost

# ========================================
# 日志配置
# ========================================
LOG_LEVEL=info
LOG_DIR=/app/logs

# ========================================
# 初始化配置
# ========================================
RUN_DB_INIT=false
CREATE_DEFAULT_ADMIN=false

# ========================================
# 监控和性能配置
# ========================================
ENABLE_METRICS=true
METRICS_PORT=9090

# ========================================
# 安全配置
# ========================================
CORS_ORIGIN=*
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=3600

# ========================================
# 开发/测试配置
# ========================================
DEBUG=false
MOCK_GCLOUD=false
